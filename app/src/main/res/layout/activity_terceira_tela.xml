<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TerceiraTela"
    android:background="#242734">

    <androidx.cardview.widget.CardView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/imageUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".04"
        app:cardCornerRadius="18dp">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/input"
        android:layout_width="253dp"
        android:layout_height="40dp"
        android:background="@drawable/input_text"
        app:layout_constraintStart_toEndOf="@id/imageUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:hint="Search.."
        android:paddingStart="5dp"
        app:layout_constraintVertical_bias=".04"
        android:textColorHint="@color/white"
        android:drawableRight="@drawable/search"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/god1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:layout_constraintBottom_toTopOf="@id/god3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/god2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/god_of_war_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="God Of War (2005)"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/turretroad_bold"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@id/god2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:layout_constraintBottom_toTopOf="@id/god4"
        app:layout_constraintStart_toEndOf="@+id/god1"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/god_of_war_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="God Of War Ascension"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/turretroad_bold"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/god3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/god1"
        app:layout_constraintBottom_toTopOf="@id/god5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/god4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/god_of_war_3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="God Of War: Ragnarok"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/turretroad_bold"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/god4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/god2"
        app:layout_constraintBottom_toTopOf="@id/god6"
        app:layout_constraintStart_toEndOf="@id/god3"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/god_of_war_4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="God Of War: Ragnarok"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/turretroad_bold"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/god5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/god3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/god2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/god_of_war_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="God Of War: Origins Collection"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:fontFamily="@font/turretroad_bold"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/god6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/god4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/god5"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/god_of_war_6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="God Of War: Ragnarok"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/turretroad_bold"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"/>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>